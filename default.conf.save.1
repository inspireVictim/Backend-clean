###############################
# 1. REDIRECT HTTP → HTTPS
###############################
server {
    listen 80;
    server_name yessgo.org www.yessgo.org api.yessgo.org admin.yessgo.org partner.yessgo.org django.yessgo.org app.yessgo.org;

    location ^~ /.well-known/acme-challenge/ {
        root /usr/share/nginx/html;
    }

    return 301 https://$host$request_uri;
}

###############################
# 2. DJANGO PAYMENT SERVICE (django.yessgo.org)
###############################
server {
    listen 443 ssl;
    http2 on;
    server_name django.yessgo.org;

    ssl_certificate /etc/letsencrypt/live/yessgo.org/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/yessgo.org/privkey.pem;

    location / {
        # Фикс CORS для платежей
        if ($request_method = 'OPTIONS') {
            add_header 'Access-Control-Allow-Origin' 'https://app.yessgo.org' always;
            add_header 'Access-Control-Allow-Methods' 'GET, POST, OPTIONS' always;
            add_header 'Access-Control-Allow-Headers' 'Authorization,Content-Type,Accept,Origin,X-Requested-With' always;
            return 204;
        }
        add_header 'Access-Control-Allow-Origin' 'https://app.yessgo.org' always;
	

        # Проксирование на Django
        # Используем переменную, чтобы Nginx не падал при запуске, если контейнер еще не готов
        set $upstream_payment http://payment-service:8000;
        proxy_pass $upstream_payment;
        
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}

###############################
# 3. API DOMAIN (api.yessgo.org)
###############################
server {
    listen 443 ssl;
    http2 on;
    server_name api.yessgo.org;

    ssl_certificate /etc/letsencrypt/live/yessgo.org/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/yessgo.org/privkey.pem;

    location / {
        # ФИКС ДВОЙНОГО ПУТИ /api/v1/api/v1/
        rewrite ^/api/v1/api/v1/(.*)$ /api/v1/$1 break;

        proxy_pass http://csharp-backend:5000;
        
        add_header 'Access-Control-Allow-Origin' '*' always;
        add_header 'Access-Control-Allow-Methods' 'GET, POST, OPTIONS, PUT, DELETE' always;
        add_header 'Access-Control-Allow-Headers' 'Authorization,Content-Type,Accept,Origin' always;

        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}

